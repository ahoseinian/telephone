extends layout

block content
  nav.navbar.navbar-light.bg-faded.m-b-1
    button.navbar-toggler.hidden-sm-up(type="button", data-toggle="collapse", data-target="#exCollapsingNavbar2")
      span.fa.fa-bars
    #exCollapsingNavbar2.collapse.navbar-toggleable-xs
      .navbar-brand.text-primary
        span.fa.fa-phone
        span.p-r-s-1 دفترچه تلفن
      ul.nav.navbar-nav
        li.nav-item
          a.nav-link(ui-sref="contacts.column", ui-sref-opts="{reload: true}") 
            span.fa.fa-users
            span.p-r-s-1 مخاطبین
        li.nav-item
          a.nav-link(ui-sref='messages', ui-sref-active="active") 
            span.fa.fa-paper-plane-o
            span.p-r-s-1 ارسال پیام
        li.nav-item
          a.nav-link(ui-sref='delivery', ui-sref-active="active") 
            span.fa.fa-calendar-check-o      
            span.p-r-s-1 پیگیری پیام
        li.nav-item
          a.nav-link(ui-sref='setting', ui-sref-active="active") 
            span.fa.fa-cog      
            span.p-r-s-1 تنظیمات
        li.nav-item.pull-xs-left
          a.nav-link(href='/auth/logout', ui-sref-active="active") 
            span.fa.fa-sign-out      
            span.p-r-s-1 خروج
        li.nav-item.pull-xs-left
          a.nav-link(href='/')
            span.fa.fa-home
            span.p-r-s-1 بازگشت

  span(ng-init= "user= "+JSON.stringify(user))
  <div ui-view></div>
